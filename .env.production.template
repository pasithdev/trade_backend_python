# Production Environment Variables for DigitalOcean Droplet
# Copy this file to .env.production and fill in your actual values

# Application Settings
SECRET_KEY=your-super-secret-key-change-this-to-something-very-secure-and-random
ENVIRONMENT=production
PORT=8000

# Binance API Configuration
BINANCE_API_KEY=your-binance-api-key-here
BINANCE_SECRET_KEY=your-binance-secret-key-here
BINANCE_TESTNET=false

# Redis Configuration (for caching)
REDIS_PASSWORD=your-secure-redis-password-here

# SSL and Domain Configuration
DOMAIN_NAME=yourdomain.com
EMAIL=your-email@domain.com

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://user:password@host:port/database

# Logging Configuration
LOG_LEVEL=INFO

# Security Settings
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Monitoring and Health Checks
HEALTH_CHECK_TOKEN=your-health-check-token

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload Settings (if applicable)
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Backup Settings
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Email Settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Timezone
TIMEZONE=UTC

# Performance Settings
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=30
GUNICORN_MAX_REQUESTS=1000